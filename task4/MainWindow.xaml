<Window x:Class="task4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:task4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Label Content="Price"/>
        <Slider x:Name="PriceSlider" Maximum="1000000" Minimum="0" ValueChanged="PriceSlider_ValueChanged"/>
        <Label Content="Procent"/>
        <Slider x:Name="ProcentSlider" Maximum="100" Minimum="0" ValueChanged="ProcentSlider_ValueChanged"/>
        <TextBlock TextWrapping="Wrap">
            <Label x:Name="summa" Content="Сумма:" />
            <Label x:Name="percent" Content="Процент:"/>
            <Label x:Name="result" Content="Результат:"/>
        </TextBlock>
    </StackPanel>
</Window>
